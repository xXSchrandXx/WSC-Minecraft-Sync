<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.xxschrandxx.wsc</groupId>
	<artifactId>wscsync</artifactId>
	<version>1.0.0-SNAPSHOT</version>

	<name>WSC-Minecraft-Sync</name>
	<url>https://github.com/xXSchrandXx/WSC-Minecraft-Sync</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<repositories>
		<!-- Spigot & Bungee Repo -->
		<repository>
			<id>spigot-bungee-repo</id>
			<url>https://hub.spigotmc.org/nexus/content/groups/public/</url>
		</repository>
		<!-- Permission Plugins -->
		<!-- LuckPerms -->
		<repository>
			<id>codemc-release</id>
			<url>https://repo.codemc.org/repository/maven-releases</url>
		</repository>
		<!-- CloudNet -->
		<repository>
			<id>cloudnet-releases</id>
			<url>https://repo.cloudnetservice.eu/repository/releases/</url>
		</repository>
		<!-- Vault -->
		<repository>
			<id>jitpack.io</id>
			<url>https://jitpack.io</url>
		</repository>
	</repositories>

	<dependencies>
		<!-- Spigot Dep -->
		<dependency>
			<groupId>org.spigotmc</groupId>
			<artifactId>spigot-api</artifactId>
			<version>1.16.5-R0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<!-- Bungee Dep -->
		<dependency>
			<groupId>net.md-5</groupId>
			<artifactId>bungeecord-api</artifactId>
			<version>1.16-R0.4</version>
		</dependency>
		<!-- WSC-Minecraft-Bridge -->
		<dependency>
			<groupId>de.xxschrandxx.wsc</groupId>
			<artifactId>wscbridge</artifactId>
			<version>2.0.0-SNAPSHOT</version>
		</dependency>
		<!-- Permission plugins -->
		<!-- LuckPerms -->
		<dependency>
			<groupId>net.luckperms</groupId>
			<artifactId>api</artifactId>
			<version>5.4</version>
			<scope>provided</scope>
		</dependency>
		<!-- CloudNet -->
		<dependency>
			<groupId>de.dytanic.cloudnet</groupId>
			<artifactId>cloudnet-driver</artifactId>
			<version>3.4.5-RELEASE</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>de.dytanic.cloudnet</groupId>
			<artifactId>cloudnet-cloudperms</artifactId>
			<version>3.4.5-RELEASE</version>
			<scope>provided</scope>
		</dependency>
		<!-- Vault -->
		<dependency>
			<groupId>com.github.MilkBowl</groupId>
			<artifactId>VaultAPI</artifactId>
			<version>1.7</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<executions>
					<execution>
						<phase>compile</phase>
						<configuration>
							<source>${maven.compiler.source}</source>
							<target>${maven.compiler.source}</target>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>3.1.1</version>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<phase>package</phase>
						<configuration>
							<source>${maven.compiler.source}</source>
							<javadocExecutable>${java.home}/bin/javadoc</javadocExecutable>
							<additionalparam>-Xdoclint:all -Xdoclint:-missing</additionalparam>
							<additionalOptions>-Xdoclint:all -Xdoclint:-missing</additionalOptions>
							<additionalJOptions>
								<additionalJOption>-Xdoclint:all</additionalJOption>
								<additionalJOption>-Xdoclint:-missing</additionalJOption>
							</additionalJOptions>
						</configuration>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>wagon-maven-plugin</artifactId>
				<version>2.0.2</version>
				<executions>
					<execution>
						<id>upload-javadoc</id>
						<phase>deploy</phase>
						<goals>
							<goal>upload</goal>
						</goals>
						<configuration>
							<serverId>gamestrikeNew</serverId>
							<fromDir>${project.build.directory}</fromDir>
							<includes>apidocs/**, ${project.artifactId}-${project.version}.jar</includes>
							<excludes>*javadoc.jar,*shaded.jar</excludes>
							<url>ftp://maven.gamestrike.de/docs</url>
							<toDir>${project.artifactId}/${project.version}</toDir>
							<optimize>false</optimize>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>3.0.0-M1</version>
			</plugin>

		</plugins>

		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				 <artifactId>wagon-ftp</artifactId>
				 <version>1.0</version>
			  </extension>
		  </extensions>
	</build>

	<distributionManagement>
		<repository>
			<id>gamestrikeNew</id>
			<name>Gamestrike.de</name>
			<url>ftp://maven.gamestrike.de/mvn/</url>
		</repository>
	</distributionManagement>

	<issueManagement>
		<system>Issues</system>
		<url>https://github.com/xXSchrandXx/WSC-Minecraft-Linker/issues/new</url>
	</issueManagement>
</project>
